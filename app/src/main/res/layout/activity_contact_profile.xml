<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactProfileActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dami_1"
        android:id="@+id/status_img"
        android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_container"
            android:background="@drawable/user_profile_overlay"
            android:orientation="vertical"
            android:layout_marginTop="120dp">
            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:gravity="center_horizontal"
                android:background="@drawable/mutual_img_bg">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/dami"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:text="Daniel Olili"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status here"
                android:drawablePadding="10dp"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/red_bottom"
                android:minHeight="45dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/colorPrimaryDark"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/TextAppearance.Design.Tab" >

            </android.support.design.widget.TabLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

</RelativeLayout>