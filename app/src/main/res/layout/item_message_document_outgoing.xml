<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attachment_doc_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">
    <LinearLayout
        android:id="@+id/download_doc_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/download_doc_relative_layout"
            android:layout_width="55dp"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/download_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_file_download_black_24dp" />

            <TextView
                android:id="@+id/applozic_doc_file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/download_image"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/download_image"
                android:text="20MB"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/retry_doc_relative_layout"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@color/colorPrimary"
            >

            <ImageView
                android:id="@+id/applozic_retry__image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_file_upload_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/applozic_retry__image"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/applozic_retry__image"
                android:text="RETRY"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doc_download_progress_rl"
            android:layout_width="55dp"
            android:layout_height="55dp">

            <ProgressBar
                android:id="@+id/doc_download_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/download_calcle_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_cancel_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doc_downloaded"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="visible">

            <!--ImageView
                android:id="@+id/doc_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_file_doc" /-->
        </RelativeLayout>

        <TextView
            android:id="@+id/doc_file_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/colorPrimaryLight"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>