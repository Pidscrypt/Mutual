<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/attachment_audio"
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/wrapper"
        android:background="@drawable/balloon_outgoing_normal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/audio_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorTranslucentDark"
                android:padding="4dp"
                android:src="@drawable/ic_audio"/>
            <ImageView
                android:id="@+id/message_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/message_got_receipt_from_target" />
            <ImageView
                android:id="@+id/retry__image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/inline_audio_upload_normal"
                android:visibility="gone"
                android:layout_marginStart="-12dp" />
            <ImageView
                android:id="@+id/pause_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/inline_audio_pause_normal"
                android:visibility="gone"
                android:layout_marginStart="-12dp" />
            <ImageView
                android:id="@+id/play_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/inline_audio_play_normal"
                android:layout_marginStart="-12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:weightSum="3"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            tools:ignore="RtlHardcoded">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <SeekBar
                android:id="@+id/audio_seekbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:thumbTint="@color/colorGrey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/audio_duration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black_overlay"
                    android:text="0:44"
                    />
                <TextView
                    android:id="@+id/message_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="10:39am"
                    android:textSize="11sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>