<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:background="@drawable/chat_right_qp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/ll_chat_send_voice_item_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_chat_send_voice_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:text="姓名"
                android:textSize="16sp"
                />

        </LinearLayout>
        <ProgressBar
            android:id="@+id/pb_chat_send_voice_item_load"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_voice_item_container"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_chat_send_voice_item_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_voice_item_container"
            android:gravity="center"
            android:text="shjh"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_chat_send_voice_item_resend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/pb_chat_send_voice_item_load"
            android:layout_alignTop="@+id/pb_chat_send_voice_item_load"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/ll_chat_send_voice_item_container"
            android:src="@drawable/btn_chat_send_failed_resend_selector"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>